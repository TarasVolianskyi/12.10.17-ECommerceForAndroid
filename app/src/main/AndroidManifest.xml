<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.volianskyi.taras.a121017_ecommerceforandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CatalogActivity" />

        <provider
            android:name=".MyContentProvider"
            android:authorities="com.volianskyi.taras.ecommerce.provider"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".AdminMainActivity" />
        <activity
            android:name=".AdminUsersActivity"
            android:label="@string/title_activity_admin_users"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AdminAddUsersActivity" />
        <activity android:name=".AdminUpdateUsersActivity" />
        <activity
            android:name=".AdminProductsActivity"
            android:label="@string/title_activity_admin_products"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AdminAddProductsActivity" />
        <activity android:name=".AdminUpdateProductsActivity"></activity>
    </application>

</manifest>