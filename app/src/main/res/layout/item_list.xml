<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:id="@+id/ivBackgroundItemList"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/fone" />

    <Button
        android:id="@+id/btnBuyItemList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:text="@string/buy" />

    <TextView
        android:id="@+id/tvNameItrmList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:text="Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvPreviousPriceItemList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginTop="60sp"
        android:text="Previous Price"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvPriceItemList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:text="Price"
        android:textSize="24sp" />
</FrameLayout>